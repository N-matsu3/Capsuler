<div class="container">
  <div class="row mt-5">
    <h4 class="col-md-12">プロフィール編集</h4>
    <div class="col-md-3 mt-5">

      <%= form_with model:@user,url: users_my_page_path, method: :patch do |f| %>
            プロフ画像
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>

    <div class="col-md-8 offset-md-1">
      <table class="table border">
        <tr>
          <th>ユーザネーム</th>
          <td><%= f.text_field :user_name,  autofocus: true, placeholder:"ユーザネーム"%></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, placeholder:"メールアドレス"%></td>
        </tr>
        <tr>
          <th>プロフィール</th>
          <td><%= f.text_area :introduction, autofocus: true, placeholder:"自己紹介をいれてね♪"%></td>
        </tr>
      </table>
        <%= f.submit '更新！' ,class: 'btn btn-success w-50' %>
      <% end %>
    </div>
  </div>
</div>
