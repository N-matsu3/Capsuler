<div class="container">
  <div class="row">
    <div class="col">
      <h3>いいねした投稿一覧</h3>
      
      <% @favorite_items.each do |item| %>
      <div class="card mb-3" style="width: 16rem;">
        <% if item.image.attached? %>
          <%=image_tag item.image, size: "150x150" ,class:'mx-auto' %>
        <% else %>
          <%= image_tag 'no_image', size: "150x150" ,class:'mx-auto' %>
        <% end %>
      
        <h5 class="card-title mx-auto">
          <%= link_to item_path(item) do %>
            <%= item.title %>
          <% end %>
        </h5>
        <p class="card-text mx-auto">by. <%= link_to user_path(item.user_id) do %><%= item.user.user_name %> <% end %></p>
        <p class="card-text mx-auto"><%= item.created_at.strftime('%Y/%m/%d/%T') %></p>
        <!--<div class="index-rating mx-auto"><p class="card-text"><%#= render partial:'items/rate', item:item %></p>-->
        </div>
      
      <% end %>

    </div>
  </div>
</div>