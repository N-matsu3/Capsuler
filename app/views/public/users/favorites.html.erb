<div class="container">
  <div class="row">

      <h3 class="my-5">いいねした投稿一覧</h3>
      <div class="col-md-12 mx-auto d-flex flex-wrap">

        <% @favorite_items.each do |item| %>
          <div class="card mr-3 mb-5" style="width: 16rem;">
            <% if item.image.attached? %>
              <%=image_tag item.image, size: "150x150" ,class:'mx-auto' %>
            <% else %>
              <%= image_tag 'no_image', size: "150x150" ,class:'mx-auto' %>
            <% end %>

            <h5 class="card-title mx-auto">
              <%= link_to item_path(item) do %>
                <%= item.title %>
              <% end %>
            </h5>
            <div class="index-rating mx-auto"><p class="card-text"><%= render 'rate', item:item %></p>
            </div>
            <p class="card-text mx-auto">by. <%= link_to users_introduction_path(item.user_id) do %><%= item.user.user_name %> <% end %></p>
            <p class="card-text mx-auto"><%= item.created_at.strftime('%Y/%m/%d/%T') %></p>
          </div>
        <% end %>

    </div>
  </div>
</div>