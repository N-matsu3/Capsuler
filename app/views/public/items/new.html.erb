       <table class="table border">
         <tr>
           <th>イメージ</th><td><%= f.file_field :item_image, placeholder: "ガチャ画像", accept: "image/*" %></td>
         </tr>
          <tr>
           <th>タイトル</th><td> <%= f.text_field :title %></td>
         </tr>
