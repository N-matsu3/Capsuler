<div class="container">
  <div class="row">
    <div class="col-md-12">

      <h3 class="my-5"><%= @user.user_name %>さんの投稿一覧</h3>

      <% @items.each do |item| %>
        <div class="card mb-3" style="width: 18rem;">
          <% if item.image.attached? %>
            <%=image_tag item.image, size: "200x200" ,class:'mx-auto' %>
          <% else %>
            <%= image_tag 'no_image', size: "200x200" ,class:'mx-auto' %>
          <% end %>

          <h5 class="card-title mx-auto">
            <%= link_to item_path(item) do %>
              <%= item.title %>
            <% end %>
          </h5>
          <p class="card-text mx-auto"><%= item.created_at.strftime('%Y/%m/%d/%T') %></p>
        </div>
       <% end %>

    </div>
  </div>
</div>