<div class="container vh-100">
  <div class="row">
    <div class="col-10">

      <h2 class="col ml-5 pb-3 bg-secondary-subtle">ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class="table table-borderless">
        <tr>
          <th><%= f.label :メールアドレス %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th><%= f.label :パスワード %></th>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>


        <tr>
          <th></th>
          <td><%= f.submit "ログイン" ,class: "btn btn-success "%></td>
        </tr>

        <% if devise_mapping.rememberable? %>
        <tr>
          <th></th>
          <td> <%= f.check_box :remember_me %>
              <%= f.label :remember_me %></td>
        </tr>
        <% end %>

        </table>

      <% end %>


      <div class="user-message p-3 mb-2">はじめてご利用の方</br>
         <%= link_to 'こちら', new_user_registration_path %>から新規登録してください。
      </div>
      </div>

   </div>
  </div>
</div>