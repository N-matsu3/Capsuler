<div class="container vh-100">
  <div class="row">
    <div class="col-10 ">



      <h2 class="col ml-5 pb-3 bg-secondary-subtle">新規ユーザ登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

        <table class="table table-borderless">
            <tr>
              <th><%= f.label :ユーザー名 %></th>
              <td><%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %></td>
            </tr>

            <tr>
              <th><%= f.label :メールアドレス %></th>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>

            <tr>
              <th><%= f.label :パスワード %></th>
              <td><% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %></br>
              <%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>

            <tr>
              <th><%= f.label :パスワード（確認用） %></th>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>

            <tr>
              <th></th>
              <td><%= f.submit "新規登録" ,class: "btn btn-success w-50"%></td>
            </tr>

             <tr>
              <th></th>
              <td> <%= link_to 'ゲストログイン', homes_guest_sign_in_path, method: :post ,class: "btn btn-primary w-50"%></td>
            </tr>

        </table>
        <% end %>

      <div class="user-message p-3 mb-2">既に登録済みの方</br>
         <%= link_to 'こちら', new_user_session_path %>からログインしてください。
      </div>


      </div>
    </div>
  </div>
</div>