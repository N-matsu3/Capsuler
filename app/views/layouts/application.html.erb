<!DOCTYPE html>
<html>
  <head>

    <title>Capsuler</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
      <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

   <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><%= image_tag('logo.jpg') %></a>
          <div>
            <% if user_signed_in? %>
              <% if current_user.profile_image.attached? %>
                <%=image_tag current_user.profile_image, size: "50x50" %>
              <% else %>
                <%= image_tag 'no_image', size: "50x50" %>
              <% end %>
                <%= current_user.user_name%>

              <% elsif admin_signed_in? %>
                管理者としてログイン中
              <% end %>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">

            <ul class="navbar-nav ml-auto">

            <% if user_signed_in? %>

              <li class="nav-item">
                <%= link_to 'マイページ',  users_my_page_path, class: 'nav-link text-dark' %>
              </li>

              <li class="nav-item">
                <%= link_to 'マイ投稿一覧', my_items_path, class: 'nav-link text-dark' %>
              </li>

              <li class="nav-item">
                <%= link_to 'アイテム投稿', new_item_path, class: 'nav-link text-dark' %>
              </li>

              <li class="nav-item">
                <%= link_to "アイテム一覧", items_path, class: 'nav-link text-dark' %>
              </li>

              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
              </li>

            <% elsif admin_signed_in? %>

              <li class="nav-item">
                <%= link_to "ユーザ一覧", admin_users_path, class: 'nav-link text-dark' %>
              </li>

              <li class="nav-item">
                <%= link_to "アイテム一覧",  admin_items_path, class: 'nav-link text-dark' %>
              </li>

              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
              </li>


            <% else %>


              <li class="nav-item">
                <%= link_to '新規登録', new_user_registration_path, class: 'nav-link text-dark' %>
              </li>

              <li class="nav-item">
                <%= link_to 'ログイン', new_user_session_path, class: 'nav-link text-dark' %>
              </li>

              <li class="nav-item">
                <%= link_to 'about', about_path, class: 'nav-link text-dark' %>
              </li>

              <li class="nav-item">
                <%= link_to "アイテム一覧", items_path, class: 'nav-link text-dark' %>
              </li>

            <% end %>

            </ul>

          </div>
        </div>
      </nav>

    </header>
    <main class=" main-visual mb-auto">
    <%= yield %>
    </main>
    <footer class="bg-dark text-light pt-2 pb-1 mt-5">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4">
          </div>
          <div class="col-md-8">
            <h6 class="text-white mt-2 mb-3">Link</h6>
            <ul class="p-0 list-unstyled">
              <li>
                <a href="" title="About" class="text-white-50">会社概要</a>
              </li>
              <li>
                <a href="" title="License informations" class="text-white-50">プライバシーポリシー</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
